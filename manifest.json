{
	"name":"BOT StopotS",
	"version":"1.0",
	"description":"Bot to auto-answer",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "img/favicon-16.png",
			"32": "img/favicon-32.png",
			"48": "img/favicon-48.png",
			"64": "img/favicon-64.png",
			"128": "img/favicon-128.png"
		}
	},
	"permissions": [
        "storage",
		"tabs",
		"activeTab",
		"scripting"
    ],
	"icons": { 
		"16": "img/favicon-16.png",
		"32": "img/favicon-32.png",
		"48": "img/favicon-48.png",
		"64": "img/favicon-64.png",
		"128": "img/favicon-128.png"
	}
}